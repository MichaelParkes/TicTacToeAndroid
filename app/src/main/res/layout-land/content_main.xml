<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.parkes.michael.mparkeslab7.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.parkes.michael.mparkeslab7.AspectRatioImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/view"
        android:layout_alignLeft="@+id/view"
        android:layout_alignTop="@id/view"
        android:layout_alignRight="@id/view"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/Row1_1"
                android:layout_column="0"
                android:src="@drawable/blank"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView2"
                android:layout_column="1"
                android:src="@drawable/vert"
                android:layout_weight=".05" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/Row1_2"
                android:layout_column="2"
                android:src="@drawable/blank"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView4"
                android:layout_column="3"
                android:src="@drawable/vert"
                android:layout_weight=".05" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/Row1_3"
                android:layout_column="4"
                android:src="@drawable/blank"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".05">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView6"
                android:layout_weight="1"
                android:src="@drawable/horiz" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView18"
                android:layout_weight="1"
                android:src="@drawable/horiz" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView19"
                android:layout_weight="1"
                android:src="@drawable/horiz" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/Row2_1"
                android:layout_column="0"
                android:src="@drawable/blank"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView9"
                android:layout_column="1"
                android:src="@drawable/vert"
                android:layout_weight=".05" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/Row2_2"
                android:layout_column="2"
                android:src="@drawable/blank"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView11"
                android:layout_column="3"
                android:src="@drawable/vert"
                android:layout_weight=".05" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/Row2_3"
                android:layout_column="4"
                android:src="@drawable/blank"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".05">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView7"
                android:layout_weight="1"
                android:src="@drawable/horiz" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView20"
                android:layout_weight="1"
                android:src="@drawable/horiz" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView21"
                android:layout_weight="1"
                android:src="@drawable/horiz" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/Row3_1"
                android:layout_column="0"
                android:layout_weight="1"
                android:src="@drawable/blank" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView14"
                android:layout_weight=".05"
                android:layout_column="1"
                android:src="@drawable/vert" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/Row3_2"
                android:layout_column="2"
                android:layout_weight="1"
                android:src="@drawable/blank" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView16"
                android:layout_column="3"
                android:layout_weight=".05"
                android:src="@drawable/vert" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/Row3_3"
                android:layout_column="4"
                android:layout_weight="1"
                android:src="@drawable/blank" />
        </TableRow>
    </TableLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBlueX"
        android:src="@drawable/x"
        android:layout_below="@+id/imgRedO"
        android:layout_alignLeft="@+id/imgRedO"
        android:layout_alignStart="@+id/imgRedO" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgRedO"
        android:src="@drawable/o"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
